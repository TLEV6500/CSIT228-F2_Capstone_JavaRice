<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="18" xmlns="http://javafx.com/javafx/11.0.14-internal"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.javarice_capstone.javarice_capstone.Factory.GameSetupDialogController$ExitConfirmationDialogController"
      style="-fx-background-radius: 10; -fx-padding: 28 20 24 20;">

    <Label fx:id="messageLabel" style="-fx-font-size: 18px; -fx-text-fill: #fff; -fx-wrap-text: true;" text="Are you sure you want to exit the current game session?" />

    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="yesButton" text="Yes" onAction="#yesButtonClicked" style="-fx-background-color: #34C275; -fx-text-fill: #fff; -fx-font-weight: bold; -fx-background-radius: 7; -fx-pref-width: 80; -fx-pref-height: 36;" />
        <Button fx:id="noButton" text="No" onAction="#noButtonClicked" style="-fx-background-color: #ef5350; -fx-text-fill: #fff; -fx-font-weight: bold; -fx-background-radius: 7; -fx-pref-width: 80; -fx-pref-height: 36;" />
    </HBox>

</VBox>