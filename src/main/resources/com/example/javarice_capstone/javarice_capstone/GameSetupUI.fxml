<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefWidth="1230" prefHeight="690"
           styleClass="root-pane"
           stylesheets="@css/gameSetup.css"
           xmlns="http://javafx.com/javafx/11.0.14-internal"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.javarice_capstone.javarice_capstone.Gameplay.GameSetupController">

    <BorderPane>

        <!-- Header -->
        <top>
            <HBox alignment="CENTER" styleClass="header-container">
                <Label styleClass="header-label" text="UNO Game Lobby">
                    <font>
                        <Font name="Arial Black" size="34.0"/>
                    </font>
                </Label>
            </HBox>
        </top>

        <!-- Center: SplitPane with Player List (left) and Chat (right) -->
        <center>
            <VBox spacing="18.0" alignment="TOP_CENTER" styleClass="settings-container">
                <!-- Lobby info -->
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <Label styleClass="section-header" text="Lobby Code:"/>
                    <TextField fx:id="lobbyCodeField" editable="false" prefWidth="160"/>
                    <Button fx:id="copyLobbyCodeButton" text="Copy"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="dateTimeLabel" styleClass="datetime-label" text="YYYY-MM-DD HH:MM:SS"/>
                </HBox>

                <!-- Host controls (Ready, Leave, etc.) -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Button fx:id="readyButton" text="Ready"/>
                    <Button fx:id="leaveButton" text="Leave Lobby"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="statusLabel" styleClass="status-label" text="Waiting for players..."/>
                </HBox>

                <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="players-scroll">
                    <HBox fx:id="playersContainer" spacing="8" styleClass="players-list"/>
                </ScrollPane>

            </VBox>
        </center>

        <!-- Footer: Start/Cancel Buttons (unchanged as requested) -->
        <bottom>
            <HBox alignment="CENTER" spacing="40.0" styleClass="footer-buttons-container">
                <Button fx:id="startGameButton" prefWidth="200.0" styleClass="primary-button" text="Start Game">
                    <tooltip>
                        <Tooltip text="Click to start the game with selected players."/>
                    </tooltip>
                </Button>
                <Button fx:id="cancelButton" prefWidth="200.0" styleClass="cancel-button" text="Cancel">
                    <tooltip>
                        <Tooltip text="Return to the main menu."/>
                    </tooltip>
                </Button>
            </HBox>
        </bottom>
    </BorderPane>
</StackPane>