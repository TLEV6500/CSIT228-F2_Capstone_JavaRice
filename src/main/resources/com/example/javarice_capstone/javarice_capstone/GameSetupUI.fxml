<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefWidth="1230" prefHeight="690" styleClass="root-pane" stylesheets="@css/gameSetup.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javarice_capstone.javarice_capstone.Gameplay.GameSetupController">

    <BorderPane>
        <top>
            <HBox alignment="CENTER" styleClass="header-container">
                <Label styleClass="header-label" text="UNO Game Setup" />
            </HBox>
        </top>

        <center>
            <SplitPane dividerPositions="0.5" styleClass="main-split-pane">
                <ScrollPane fitToWidth="true" styleClass="transparent">
                    <VBox spacing="28.0" styleClass="settings-container">
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>

                        <Label styleClass="section-header" text="Game Setup" />

                        <!-- Classic UNO -->
                        <VBox fx:id="classicBox" spacing="10.0" styleClass="classic-box">
                            <Label styleClass="section-header" text="Classic UNO Rules" />
                            <GridPane alignment="CENTER" hgap="15.0" vgap="10.0">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="NEVER" minWidth="170" />
                                    <ColumnConstraints hgrow="NEVER" minWidth="40" />
                                    <ColumnConstraints hgrow="SOMETIMES" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints />
                                    <RowConstraints />
                                </rowConstraints>
                                <Label styleClass="setting-label" text="Allow Jump-In:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <CheckBox fx:id="classicAllowJumpInCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                <Label styleClass="help-label" text="(Play out of turn with an exact match. House rule.)" GridPane.columnIndex="2" GridPane.rowIndex="0" />

                                <Label styleClass="setting-label" text="Stack Draw Cards:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <CheckBox fx:id="classicStackDrawCardsCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label styleClass="help-label" text="(Stack Draw 2/4 cards. House rule.)" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                            </GridPane>
                        </VBox>

                        <!-- UNO No Mercy -->
                        <VBox fx:id="noMercyBox" spacing="10.0" styleClass="nomercy-box">
                            <Label styleClass="section-header" text="UNO No Mercy Rules" />
                            <GridPane hgap="15.0" vgap="10.0">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="NEVER" minWidth="170" />
                                    <ColumnConstraints hgrow="NEVER" minWidth="40" />
                                    <ColumnConstraints hgrow="SOMETIMES" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                </rowConstraints>
                                <Label styleClass="setting-label" text="Chain All Cards:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <CheckBox fx:id="noMercyChainAllCardsCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                <Label styleClass="help-label" text="(Play multiple matching cards in a row, any color.)" GridPane.columnIndex="2" GridPane.rowIndex="0" />

                                <Label styleClass="setting-label" text="Jump-In Wilds:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <CheckBox fx:id="noMercyJumpInWildsCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label styleClass="help-label" text="(Jump-in allowed with Wild cards.)" GridPane.columnIndex="2" GridPane.rowIndex="1" />

                                <Label styleClass="setting-label" text="Reverse Stack:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                <CheckBox fx:id="noMercyReverseStackCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <Label styleClass="help-label" text="(Stack Reverse cards to reverse direction multiple times.)" GridPane.columnIndex="2" GridPane.rowIndex="2" />

                                <Label styleClass="setting-label" text="Double Attack Draws:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                <CheckBox fx:id="noMercyDoubleAttackDrawsCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                <Label styleClass="help-label" text="(Draw 2 and Draw 4 can be combined into a single attack.)" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                            </GridPane>
                        </VBox>

                        <!-- UNO 7-0 -->
                        <VBox fx:id="sevenZeroBox" spacing="10.0" styleClass="sevenzero-box">
                            <Label styleClass="section-header" text="UNO 7-0 Rules" />
                            <GridPane hgap="15.0" vgap="10.0">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="NEVER" minWidth="170" />
                                    <ColumnConstraints hgrow="NEVER" minWidth="40" />
                                    <ColumnConstraints hgrow="SOMETIMES" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                </rowConstraints>
                                <Label styleClass="setting-label" text="Swap With Any Player:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <CheckBox fx:id="sevenZeroSwapAnyPlayerCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                <Label styleClass="help-label" text="(When playing 7, you can swap with any player, not just next.)" GridPane.columnIndex="2" GridPane.rowIndex="0" />

                                <Label styleClass="setting-label" text="Rotate Hands Direction:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <CheckBox fx:id="sevenZeroRotateHandsCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label styleClass="help-label" text="(0 rotates all hands in direction of play.)" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                            </GridPane>
                        </VBox>
                    </VBox>
                </ScrollPane>

                <VBox spacing="20.0" styleClass="lobby-container">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>

                    <HBox alignment="CENTER_LEFT" spacing="20.0">
                        <Label styleClass="section-header" text="Player Lobby" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="dateTimeLabel" styleClass="datetime-label" text="2025-04-21 08:18:33" />
                    </HBox>

                    <!-- Add/Remove Player Controls -->
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Button fx:id="addPlayerButton" text="Add Player" />
                        <Button fx:id="removePlayerButton" text="Remove Player" />
                    </HBox>

                    <VBox spacing="10" styleClass="section-pane" VBox.vgrow="ALWAYS">
                        <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="players-scroll" VBox.vgrow="ALWAYS">
                            <VBox fx:id="playersContainer" spacing="8" styleClass="players-list" />
                        </ScrollPane>
                    </VBox>
                </VBox>
            </SplitPane>
        </center>

        <bottom>
            <HBox alignment="CENTER" spacing="40.0" styleClass="button-container">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
                <Button fx:id="startGameButton" prefWidth="200.0" styleClass="primary-button" text="Start Game">
                    <tooltip>
                        <Tooltip text="Click to start the game with selected settings." />
                    </tooltip>
                </Button>
                <Button fx:id="cancelButton" prefWidth="200.0" styleClass="cancel-button" text="Cancel">
                    <tooltip>
                        <Tooltip text="Click to cancel and return to the main menu." />
                    </tooltip>
                </Button>
            </HBox>
        </bottom>
    </BorderPane>
</StackPane>