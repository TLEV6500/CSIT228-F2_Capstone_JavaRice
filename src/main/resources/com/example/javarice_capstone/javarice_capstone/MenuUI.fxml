<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<StackPane prefWidth="1230" prefHeight="690" styleClass="root-pane"
           stylesheets="@css/menu.css"
           xmlns="http://javafx.com/javafx/11.0.14-internal"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.javarice_capstone.javarice_capstone.Gameplay.MenuController">

    <Rectangle styleClass="background-rect" StackPane.alignment="CENTER" />

    <VBox alignment="CENTER" spacing="30" styleClass="content-container">

        <Label styleClass="game-title" text="UNO">
            <font>
                <Font name="Arial Black" size="100.0" />
            </font>
        </Label>

        <HBox alignment="CENTER" spacing="25" styleClass="menu-cards-container">

            <VBox fx:id="singleplayerCard" alignment="CENTER" spacing="33" styleClass="menu-card card-green" prefWidth="247.5" prefHeight="405">
                <ImageView fx:id="singleplayerImageView" fitHeight="337.5" fitWidth="247.5" pickOnBounds="true" preserveRatio="true"/>
                <Label text="Play Singleplayer" styleClass="card-label green"/>
            </VBox>

            <VBox fx:id="hostGameCard" alignment="CENTER" spacing="33" styleClass="menu-card card-blue" prefWidth="247.5" prefHeight="405">
                <ImageView fx:id="hostgameImageView" fitHeight="337.5" fitWidth="247.5" pickOnBounds="true" preserveRatio="true"/>
                <Label text="Host Game" styleClass="card-label blue"/>
            </VBox>

            <VBox fx:id="joinGameCard" alignment="CENTER" spacing="33" styleClass="menu-card card-yellow" prefWidth="247.5" prefHeight="405">
                <ImageView fx:id="joingameImageView" fitHeight="337.5" fitWidth="247.5" pickOnBounds="true" preserveRatio="true"/>
                <Label text="Join Game" styleClass="card-label blue"/>
            </VBox>

            <VBox fx:id="exitCard" alignment="CENTER" spacing="33" styleClass="menu-card card-red" prefWidth="247.5" prefHeight="405">
                <ImageView fx:id="exitImageView" fitHeight="337.5" fitWidth="247.5" pickOnBounds="true" preserveRatio="true"/>
                <Label text="Exit" styleClass="card-label red"/>
            </VBox>

        </HBox>

    </VBox>

</StackPane>