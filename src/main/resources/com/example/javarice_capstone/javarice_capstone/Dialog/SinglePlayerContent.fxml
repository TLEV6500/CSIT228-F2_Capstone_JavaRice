<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="12" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javarice_capstone.javarice_capstone.Factory.SingleplayerContentController">

    <Label style="-fx-font-size: 16px; -fx-text-fill: #fff; " text="How many players do you want to play with?" wrapText="true" />

    <ComboBox fx:id="playerCountComboBox" prefWidth="200.0" style="-fx-font-size: 16px; -fx-background-radius: 7; -fx-background-color: #f2f2f2;                 -fx-border-color: #ffd54f;                 -fx-border-radius: 7;                 -fx-border-width: 2;                 -fx-text-fill: #ffd54f;                 -fx-padding: 4 8 4 8;               ">
        <VBox.margin>
            <Insets bottom="10.0" top="5.0" />
        </VBox.margin>
    </ComboBox>

    <HBox alignment="CENTER" spacing="18">
        <Button fx:id="okButton" defaultButton="true" onAction="#okClicked" style="-fx-background-color: #34C275; -fx-text-fill: #fff; -fx-font-weight: bold; -fx-background-radius: 7; -fx-pref-width: 90; -fx-pref-height: 40;" text="PLAY" />
        <Button fx:id="cancelButton" cancelButton="true" onAction="#cancelClicked" style="-fx-background-color: #ef5350; -fx-text-fill: #fff; -fx-font-weight: bold; -fx-background-radius: 7; -fx-pref-width: 90; -fx-pref-height: 40;" text="Cancel" />
    </HBox>

</VBox>
