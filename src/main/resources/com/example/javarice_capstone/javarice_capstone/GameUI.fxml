<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane prefHeight="768" prefWidth="1366" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javarice_capstone.javarice_capstone.Gameplay.GameController">

    <!-- Top Opponents -->
    <top>
        <HBox fx:id="topOpponentsBox" alignment="CENTER" prefHeight="120" spacing="100">
            <VBox alignment="CENTER" spacing="5">
                <Label fx:id="opponent1Name" text="Opponent 1" />
                <HBox fx:id="opponent1Hand" alignment="CENTER" spacing="3" />
                <Label fx:id="opponent1HandCount" text="(0 cards)" style="-fx-font-size:10px;-fx-text-fill:#333;" />
            </VBox>
            <VBox alignment="CENTER" spacing="5">
                <Label fx:id="opponent2Name" text="Opponent 2" />
                <HBox fx:id="opponent2Hand" alignment="CENTER" spacing="3" />
                <Label fx:id="opponent2HandCount" text="(0 cards)" style="-fx-font-size:10px;-fx-text-fill:#333;" />
            </VBox>
            <VBox alignment="CENTER" spacing="5">
                <Label fx:id="opponent3Name" text="Opponent 3" />
                <HBox fx:id="opponent3Hand" alignment="CENTER" spacing="3" />
                <Label fx:id="opponent3HandCount" text="(0 cards)" style="-fx-font-size:10px;-fx-text-fill:#333;" />
            </VBox>
        </HBox>
    </top>

    <!-- Left Opponent 4 -->
    <left>
        <VBox alignment="CENTER" prefWidth="120" spacing="1.0">
            <Label fx:id="opponent4Name" text="Opponent 4" />
            <VBox fx:id="opponent4Hand" alignment="CENTER" spacing="3" />
            <Label fx:id="opponent4HandCount" text="(0 cards)" style="-fx-font-size:10px;-fx-text-fill:#333;" />
        </VBox>
    </left>

    <!-- Right Opponent 5 -->
    <right>
        <VBox alignment="CENTER" prefWidth="120" spacing="5">
            <Label fx:id="opponent5Name" text="Opponent 5" />
            <VBox fx:id="opponent5Hand" alignment="CENTER" spacing="3" />
            <Label fx:id="opponent5HandCount" text="(0 cards)" style="-fx-font-size:10px;-fx-text-fill:#333;" />
        </VBox>
    </right>

    <!-- Center Gameplay Area (shortened) -->
    <center>
        <VBox fx:id="gamePane" alignment="CENTER" prefHeight="360" prefWidth="600.0" spacing="10">
            <HBox alignment="CENTER" spacing="30">
                <VBox alignment="CENTER">
                    <Label text="Discard Pile" />
                    <ImageView fx:id="discardPileView" fitHeight="120" fitWidth="80" preserveRatio="true" />
                </VBox>
                <VBox alignment="CENTER">
                    <Label text="Draw Pile" />
                    <Button fx:id="drawButton" text="Draw Card" />
                </VBox>
                <VBox alignment="CENTER" spacing="5">
                    <Label fx:id="currentColorLabel" text="Current Color: RED" />
                    <Rectangle fx:id="colorIndicator" height="40" width="40" />
                </VBox>
            </HBox>
            <Label fx:id="statusLabel" text="Your turn!" />
        </VBox>
    </center>

    <!-- Bottom Player Row with Scroll and Card Count -->
    <bottom>
        <VBox alignment="CENTER" prefHeight="150" spacing="5">
            <HBox alignment="CENTER" spacing="15">
                <Label text="You" />
                <Label fx:id="playerHandCount" text="(0 cards)" />
            </HBox>
            <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background:transparent; -fx-background-color:transparent;">
                <HBox fx:id="playerHand" alignment="CENTER" spacing="5" />
            </ScrollPane>
        </VBox>
    </bottom>

</BorderPane>